@model Country

<div class="container mt-5">
    <h1 class="text-center">@Model.Name</h1>
    <div class="card mt-4">
        <div class="card-body">
            <h5 class="card-title">Davlat Tafsilotlari</h5>
            <p class="card-text"><strong>Poytaxt:</strong> @Model.Capital</p>
            <p class="card-text"><strong>Axoli soni:</strong> @Model.Population</p>
            <p class="card-text"><strong>Maydoni:</strong> @Model.Area km²</p>
            <p class="card-text"><strong>Til:</strong> @Model.Language</p>
            <p class="card-text"><strong>Pul birligi:</strong> @Model.Currency</p>

            <a asp-action="Country" class="btn btn-secondary">Listga qaytish</a>
        </div>
    </div>
</div>

<!-- Optional: Add some JavaScript for Bootstrap functionality -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>

@model IEnumerable<Country>
@{
    ViewData["Title"] = "Bosh Sahifa";
}

<div class="container mt-5">
    <h1 class="text-center">Davlatlar</h1>
    <table class="table table-striped table-bordered mt-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Davlat</th>
                <th scope="col">Harakatlar</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var country in Model)
            {
                <tr>
                    <td>@country.Name</td>
                    <td>
                        <a asp-action="DetailsCountry" asp-route-id="@country.Id" class="btn btn-primary btn-sm">Batafsil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Optional: Add some JavaScript for Bootstrap functionality -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
